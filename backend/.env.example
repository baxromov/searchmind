# Data Directories
DATA_DIR=./data
UPLOAD_DIR=./data/uploads
INDEX_DIR=./data/faiss_index
TEMP_DIR=./data/temp

# Chunking Settings
CHUNK_SIZE=400
CHUNK_OVERLAP=80

# Upload Settings
MAX_FILE_SIZE_MB=50

# OCR Settings
# Set to true to enable PaddleOCR for scanned documents
# Set to false to disable OCR (only extract text from native PDFs/DOCX)
USE_OCR=true

